<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hna.hka.archive.management.system.dao.SysScenicSpotRobotOperateMapper" >
    <resultMap id="BaseResultMap" type="com.hna.hka.archive.management.system.model.SysScenicSpotRobotOperate" >
    <id column="OPERATE_ID" property="operateId" jdbcType="BIGINT" />
    <result column="ROBOT_CODE" property="robotCode" jdbcType="VARCHAR" />
    <result column="SCENIC_SPOT_ID" property="scenicSpotId" jdbcType="BIGINT" />
    <result column="START_DATE" property="startDate" jdbcType="VARCHAR"/>
    <result column="END_DATE" property="endDate" jdbcType="VARCHAR"/>
    <result column="CREATE_DATE" property="createDate" jdbcType="VARCHAR"/>
    <result column="UPDATE_DATE" property="updateDate" jdbcType="VARCHAR"/>
    </resultMap>


    <sql id="Base_Column_List" >
        OPERATE_ID,ROBOT_CODE,SCENIC_SPOT_ID,START_DATE,END_DATE,CREATE_DATE,UPDATE_DATE
    </sql>

    <select id="getSpotRobotOperateList" resultType="com.hna.hka.archive.management.system.model.SysScenicSpotRobotOperate" >

        SELECT sssro.*,sss.SCENIC_SPOT_NAME
        FROM SYS_SCENIC_SPOT_ROBOT_OPERATE sssro
        LEFT JOIN  SYS_SCENIC_SPOT sss
        ON sssro.SCENIC_SPOT_ID = sss.SCENIC_SPOT_ID
        <where>
            <if test="scenicSpotId != null and scenicSpotId != ''">
                AND sssro.SCENIC_SPOT_ID = #{scenicSpotId}
            </if>
        </where>
    </select>
    

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hna.hka.archive.management.business.dao.BusinessConfigsMapper" >
    <resultMap id="BaseResultMap" type="com.hna.hka.archive.management.business.model.BusinessConfigs" >
        <id column="ID" property="id" jdbcType="BIGINT" />
        <result column="TITLE" property="title" jdbcType="VARCHAR" />
        <result column="VALUES" property="values" jdbcType="LONGVARCHAR" />
        <result column="TYPE" property="type" jdbcType="VARCHAR" />
        <result column="STATE" property="state" jdbcType="VARCHAR" />
        <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
        <result column="UPDATE_TIME" property="updateTime" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        ID, TITLE, VALUES, TYPE, STATE, CREATE_TIME, UPDATE_TIME
    </sql>


    <update id="updateByPrimaryKeySelective" parameterType="com.hna.hka.archive.management.business.model.BusinessConfigs" >
        update BUSINESS_CONFIGS
        <set >
            <if test="title != null" >
                TITLE = #{title,jdbcType=VARCHAR},
            </if>
            <if test="values != null" >
                VALUES = #{values,jdbcType=LONGVARCHAR},
            </if>
            <if test="type != null" >
                TYPE = #{type,jdbcType=VARCHAR},
            </if>
            <if test="state != null" >
                STATE = #{state,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null" >
                CREATE_TIME = #{createTime,jdbcType=VARCHAR},
            </if>
            <if test="updateTime != null" >
                UPDATE_TIME = #{updateTime,jdbcType=VARCHAR},
            </if>
        </set>
        where ID = #{id,jdbcType=BIGINT}
    </update>

    <select id="getConfigsList" resultType="com.hna.hka.archive.management.business.model.BusinessConfigs">
        select *
        from  BUSINESS_CONFIGS
        <where>
            1 = 1
            <if test="id != null and id != ''">
                and ID = #{id}
            </if>
        </where>
    </select>





</mapper>